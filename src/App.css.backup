
/* App.css - Cyberpunk Theme (Cyan & Orange Neon) */
:root {
  /* Cyberpunk 深色背景 */
  --bg: linear-gradient(135deg, #0a1828 0%, #0f2235 50%, #0a1828 100%);
  --bg-secondary: rgba(15, 34, 53, 0.85);
  --bg-panel: rgba(10, 24, 40, 0.6);
  --bg-glass: rgba(0, 255, 249, 0.05);
  --fg: rgba(224, 247, 255, 0.95);
  --fg-bright: rgb(240, 255, 255);
  --muted: rgba(127, 168, 192, 0.7);
  
  /* 青色霓虹 - 主色 */
  --tech-cyan: #00fff9;
  --tech-cyan-bright: #5ffff8;
  --tech-cyan-dim: #00ccc4;
  
  /* 橘紅色霓虹 - 強調色 */
  --tech-orange: #ff6b35;
  --tech-orange-bright: #ff8c5a;
  --tech-orange-dim: #e65a2a;
  
  /* 粉色霓虹 - 輔助色 */
  --tech-pink: #ff3366;
  --tech-pink-bright: #ff669e;
  
  /* 功能色 - 霓虹風格 */
  --danger: #ff3366;
  --warning: #ffaa00;
  --success: #00ff88;
  
  /* 邊框 - 青色霓虹 */
  --border: rgba(0, 255, 249, 0.25);
  --border-bright: rgba(0, 255, 249, 0.5);
  --border-glow: rgba(0, 255, 249, 0.6);
  --border-orange: rgba(255, 107, 53, 0.3);
  --radius: 0px; /* 無圓角 - 方正設計 */
  
  /* 字體大小 */
  --text-xs: 11px;
  --text-sm: 13px;
  --text-base: 14px;
  --text-lg: 16px;
  --text-xl: 20px;
  --text-2xl: 28px;
  --text-3xl: 36px;
  
  /* 按鈕 */
  --btn-font-size: 13px;
  --btn-py: 10px;
  --btn-px: 20px;
  --btn-radius: 0px; /* 無圓角按鈕 */
  
  /* 青色霓虹光效 */
  --glow-cyan: 0 4px 24px rgba(0, 255, 249, 0.4);
  --glow-cyan-strong: 0 8px 40px rgba(0, 255, 249, 0.6);
  --glow-orange: 0 4px 24px rgba(255, 107, 53, 0.4);
  --glow-orange-strong: 0 8px 40px rgba(255, 107, 53, 0.6);
  --shadow-depth: 0 8px 32px rgba(0, 0, 0, 0.8);
  --shadow-panel: 0 4px 16px rgba(0, 0, 0, 0.7);
}

* { 
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html, body, #root { 
  height: 100%; 
  overflow-x: hidden;
}

body {
  background: linear-gradient(135deg, #0a1828 0%, #0f2235 50%, #0a1828 100%);
  background-attachment: fixed;
  color: var(--fg);
  font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'Segoe UI', 'Helvetica Neue', sans-serif;
  font-size: var(--text-base);
  position: relative;
  line-height: 1.65;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 青色霓虹掃描線效果 */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 15% 20%, rgba(0, 255, 249, 0.12) 0%, transparent 50%),
    radial-gradient(circle at 85% 80%, rgba(255, 107, 53, 0.08) 0%, transparent 50%),
    repeating-linear-gradient(0deg, transparent 0px, rgba(0, 255, 249, 0.04) 1px, transparent 2px);
  pointer-events: none;
  z-index: 9999;
  opacity: 0.8;
  animation: cyberpunkPulse 8s ease-in-out infinite;
}

@keyframes cyberpunkPulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 0.6; }
}

.app {
  width: 100%;
  max-width: 100%;
  margin: 0;
  padding: 20px;
  position: relative;
  min-height: 100vh;
}

@media (min-width: 768px) {
  .app {
    padding: 28px;
  }
}

@media (min-width: 1024px) {
  .app {
    padding: 36px 48px;
  }
}

@media (min-width: 1440px) {
  .app {
    padding: 40px 60px;
  }
}

/* 深邃科技頭部 */
.app__header { 
  margin-bottom: 24px;
  background: rgba(29, 32, 58, 0.5);
  backdrop-filter: blur(30px);
  border: 1px solid rgba(0, 255, 249, 0.3);
  border-radius: 0;
  padding: 20px 24px;
  position: relative;
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.4),
    inset 0 1px 0 rgba(0, 255, 249, 0.1),
    0 0 60px rgba(0, 255, 249, 0.1);
  overflow: hidden;
}

@media (min-width: 768px) {
  .app__header {
    margin-bottom: 28px;
    padding: 24px 32px;
    border-radius: 0;
  }
}

@media (min-width: 1024px) {
  .app__header {
    margin-bottom: 32px;
    padding: 28px 40px;
    border-radius: 0;
  }
}

/* 科技藍紫光效 */
.app__header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(
      ellipse at top left,
      rgba(0, 255, 249, 0.15) 0%,
      transparent 50%
    ),
    radial-gradient(
      ellipse at bottom right,
      rgba(255, 107, 53, 0.1) 0%,
      transparent 50%
    );
  pointer-events: none;
  animation: headerGlow 6s ease-in-out infinite;
}

@keyframes headerGlow {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.app__header-content {
  position: relative;
  z-index: 1;
}

.app__logo {
  display: flex;
  align-items: center;
  justify-content: center;
}

.app__logo-text {
  text-align: center;
}

.app__title { 
  margin: 0; 
  font-size: 20px;
  font-weight: 400; 
  letter-spacing: 6px;
  background: linear-gradient(135deg, #5ffff8 0%, #ff6b35 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-transform: uppercase;
  filter: drop-shadow(0 0 20px rgba(0, 255, 249, 0.5));
}

@media (min-width: 768px) {
  .app__title {
    font-size: 28px;
    letter-spacing: 8px;
  }
}

@media (min-width: 1024px) {
  .app__title {
    font-size: var(--text-3xl);
    letter-spacing: 10px;
  }
}

.app__subtitle { 
  margin-top: 6px; 
  color: var(--muted); 
  font-size: 10px;
  font-weight: 300;
  letter-spacing: 2px;
  text-transform: uppercase;
  opacity: 0.9;
}

@media (min-width: 768px) {
  .app__subtitle {
    margin-top: 8px;
    font-size: 12px;
    letter-spacing: 3px;
  }
}

@media (min-width: 1024px) {
  .app__subtitle {
    font-size: var(--text-sm);
    letter-spacing: 4px;
  }
}

/* 深邃科技玻璃卡片 */
.card { 
  background: rgba(29, 32, 58, 0.4);
  backdrop-filter: blur(30px);
  border: 1px solid rgba(0, 255, 249, 0.25);
  border-radius: 0;
  padding: 18px;
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.4),
    inset 0 1px 0 rgba(0, 255, 249, 0.1);
  position: relative;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  width: 100%;
}

@media (min-width: 768px) {
  .card {
    padding: 22px;
    border-radius: 0;
  }
}

@media (min-width: 1024px) {
  .card {
    padding: 28px;
    border-radius: 0;
  }
}

/* 頂部科技光線 */
.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(0, 255, 249, 0.6) 20%,
    rgba(255, 107, 53, 0.6) 80%,
    transparent 100%
  );
  opacity: 0.8;
}

/* 內部科技光效 */
.card::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle,
    rgba(0, 255, 249, 0.08) 0%,
    transparent 60%
  );
  pointer-events: none;
  animation: cardGlow 8s ease-in-out infinite;
}

@keyframes cardGlow {
  0%, 100% { 
    transform: translate(0, 0);
    opacity: 0.8;
  }
  50% { 
    transform: translate(-20%, 20%);
    opacity: 0.5;
  }
}

.card:hover {
  background: rgba(29, 32, 58, 0.6);
  border-color: rgba(95, 255, 248, 0.5);
  box-shadow: 
    0 12px 48px rgba(0, 0, 0, 0.5),
    0 0 40px rgba(0, 255, 249, 0.3),
    inset 0 1px 0 rgba(0, 255, 249, 0.2);
  transform: translateY(-3px);
}

.card__title { 
  font-weight: 400;
  margin-bottom: 16px;
  background: linear-gradient(135deg, #5ffff8 0%, #ff8c5a 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-transform: uppercase;
  font-size: 14px;
  letter-spacing: 2px;
  padding-bottom: 12px;
  border-bottom: 1px solid rgba(0, 255, 249, 0.2);
  position: relative;
  z-index: 1;
}

@media (min-width: 768px) {
  .card__title {
    margin-bottom: 20px;
    font-size: 15px;
    letter-spacing: 2.5px;
    padding-bottom: 14px;
  }
}

@media (min-width: 1024px) {
  .card__title {
    margin-bottom: 24px;
    font-size: var(--text-lg);
    letter-spacing: 3px;
    padding-bottom: 16px;
  }
}

/* 頁面佈局 - 完全響應式 */
.app__page {
  position: relative;
  width: 100%;
}

.page-layout {
  display: grid;
  gap: 16px;
  animation: fadeIn 0.5s ease;
  width: 100%;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* 手機優先：所有佈局都是單列 */
.page-layout--single,
.page-layout--dual,
.page-layout--focused {
  grid-template-columns: 1fr;
}

/* 平板以上：根據頁面類型調整 */
@media (min-width: 768px) {
  .page-layout {
    gap: 20px;
  }
  
  .page-layout--single {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .page-layout--focused {
    max-width: 100%;
  }
}

/* 桌面：雙欄佈局 */
@media (min-width: 1024px) {
  .page-layout {
    gap: 24px;
  }
  
  .page-layout--single {
    max-width: 1100px;
  }
  
  .page-layout--dual {
    grid-template-columns: 380px 1fr;
    gap: 28px;
  }
}

/* 大螢幕：更寬敞 */
@media (min-width: 1440px) {
  .page-layout {
    gap: 32px;
  }
  
  .page-layout--single {
    max-width: 1300px;
  }
  
  .page-layout--dual {
    grid-template-columns: 420px 1fr;
    gap: 36px;
  }
}

/* 超大螢幕：最大寬度限制 */
@media (min-width: 1920px) {
  .page-layout--single {
    max-width: 1500px;
  }
  
  .page-layout--dual {
    grid-template-columns: 480px 1fr;
    gap: 48px;
  }
}

.page-layout__main {
  display: flex;
  flex-direction: column;
  gap: 16px;
  width: 100%;
  min-width: 0;
}

@media (min-width: 768px) {
  .page-layout__main {
    gap: 20px;
  }
}

@media (min-width: 1024px) {
  .page-layout__main {
    gap: 24px;
  }
}

.page-layout__sidebar {
  display: flex;
  flex-direction: column;
  gap: 16px;
  width: 100%;
  min-width: 0;
}

@media (min-width: 768px) {
  .page-layout__sidebar {
    gap: 20px;
  }
}

@media (min-width: 1024px) {
  .page-layout__sidebar {
    gap: 24px;
  }
}

.hint { 
  margin-top: 12px; 
  color: var(--muted); 
  font-size: var(--text-xs);
  letter-spacing: 0.5px;
  opacity: 0.7;
}

.hint__code { 
  background: rgba(180, 220, 255, 0.08);
  backdrop-filter: blur(10px);
  color: var(--ice-cyan);
  padding: 4px 10px;
  border-radius: 0;
  border: 1px solid rgba(180, 220, 255, 0.15);
  font-family: 'SF Mono', 'Consolas', 'Monaco', monospace;
  font-size: var(--text-xs);
  letter-spacing: 0.3px;
}

/* 科技藍紫按鈕 */
button, .btn, [role="button"], .button {
  background: linear-gradient(135deg, rgba(0, 255, 249, 0.2) 0%, rgba(255, 107, 53, 0.15) 100%);
  backdrop-filter: blur(20px);
  color: var(--tech-blue-bright);
  border: 1px solid rgba(0, 255, 249, 0.4);
  border-radius: 0;
  padding: 8px 14px;
  font-weight: 400;
  font-size: 12px;
  line-height: 1.5;
  cursor: pointer;
  text-transform: uppercase;
  letter-spacing: 1.2px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  box-shadow: 
    0 2px 8px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(0, 255, 249, 0.2);
  white-space: nowrap;
}

@media (min-width: 768px) {
  button, .btn, [role="button"], .button {
    padding: 9px 16px;
    font-size: var(--btn-font-size);
    letter-spacing: 1.5px;
    border-radius: 0;
  }
}

@media (min-width: 1024px) {
  button, .btn, [role="button"], .button {
    padding: var(--btn-py) var(--btn-px);
    letter-spacing: 1.8px;
    border-radius: 0;
  }
}

/* 科技掃光效果 */
button::before, .btn::before, [role="button"]::before, .button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg, 
    transparent, 
    rgba(95, 255, 248, 0.4), 
    transparent
  );
  transition: left 0.6s ease;
}

button:hover::before, .btn:hover::before, [role="button"]:hover::before, .button:hover::before {
  left: 100%;
}

button:hover, .btn:hover, [role="button"]:hover, .button:hover {
  background: linear-gradient(135deg, rgba(0, 255, 249, 0.35) 0%, rgba(255, 107, 53, 0.25) 100%);
  border-color: rgba(95, 255, 248, 0.6);
  color: #ffffff;
  box-shadow: 
    0 4px 24px rgba(0, 255, 249, 0.4),
    0 0 30px rgba(0, 255, 249, 0.3),
    inset 0 1px 0 rgba(95, 255, 248, 0.3);
  transform: translateY(-2px);
}

button:active, .btn:active, [role="button"]:active, .button:active {
  background: linear-gradient(135deg, rgba(0, 255, 249, 0.4) 0%, rgba(255, 107, 53, 0.3) 100%);
  transform: translateY(0);
  box-shadow: 
    0 2px 12px rgba(0, 255, 249, 0.5),
    inset 0 1px 0 rgba(95, 255, 248, 0.3);
}

button:disabled, .btn:disabled { 
  opacity: 0.3; 
  cursor: not-allowed;
  border-color: var(--border);
  color: var(--muted);
}

/* 科技藍紫輸入框 */
.card input[type="text"],
.card input[type="search"],
.card input[type="number"],
.card select,
.card textarea { 
  width: 100%; 
  max-width: 100%; 
  display: block;
  background: rgba(29, 32, 58, 0.5);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(0, 255, 249, 0.3);
  border-radius: 0;
  color: var(--fg-bright);
  padding: 11px 14px;
  font-size: 13px;
  line-height: 1.6;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 
    inset 0 2px 4px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(0, 255, 249, 0.05);
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
}

@media (min-width: 768px) {
  .card input[type="text"],
  .card input[type="search"],
  .card input[type="number"],
  .card select,
  .card textarea {
    padding: 12px 16px;
    font-size: 13.5px;
    border-radius: 0;
  }
}

@media (min-width: 1024px) {
  .card input[type="text"],
  .card input[type="search"],
  .card input[type="number"],
  .card select,
  .card textarea {
    padding: 14px 18px;
    font-size: var(--text-base);
    border-radius: 0;
  }
}

.card input:focus,
.card select:focus,
.card textarea:focus {
  outline: none;
  background: rgba(29, 32, 58, 0.7);
  border-color: rgba(95, 255, 248, 0.6);
  box-shadow: 
    inset 0 2px 4px rgba(0, 0, 0, 0.3),
    0 0 24px rgba(0, 255, 249, 0.4),
    0 0 0 1px rgba(0, 255, 249, 0.5);
}

.card input::placeholder {
  color: var(--muted);
  opacity: 0.5;
  letter-spacing: 0.5px;
}

.app__footer { margin-top:16px; color:var(--muted); font-size:12px; display:flex; gap:10px; align-items:center; border-top:1px solid var(--border); padding-top:12px; }

@media (max-width: 1023px) {
  .app { padding: 12px; }
  .app__grid { flex-direction: column; }
  .resizer { display: none; }
}


/* QueryBuilder fallback styles (when Tailwind classes are not present) */
.qb__input {
  width: 100%;
  max-width: 100%;
  display: block;
  padding: 8px 12px;
  border: 1px solid var(--border);
  border-radius: 0;
  outline: none;
}

.qb__input:focus {
  box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.25);
}


/* Ensure QueryBuilder input doesn't collapse too narrow */
.qb { width: 100%; }
.qb__input { width: 100%; min-width: 420px; }
@media (min-width: 1024px) {
  .qb__input { min-width: 640px; }
}
